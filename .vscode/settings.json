  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "r"],
      "commands": ["editor.action.rename"]
    },
    // 和 nvim 配置一样
    {
      "before": ["leader", "w"],
      "commands": [":w!"]
    },
    {
      "before": ["leader", "q"],
      "commands": [":q!"]
    },
    {
      "before": ["leader", "x"],
      "commands": [":x!"]
    },
    {
      "before": ["<c-a>"],
      "after": ["g", "g", "V", "G"]
    },
    {
      // 同鼠标hover时展示的效果一样
      "before": ["<leader>", "k"],
      "commands": ["editor.action.showHover"]
    },
    {
      // 展示上一个错误
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      // 展示下一个错误
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      // 行首
      "before": ["H"],
      "after": ["^"]
    },
    {
      // 行尾
      "before": ["L"],
      "after": ["g", "_"]
    },
    {
      // 向下移动5行
      "before": ["J"],
      "after": ["5", "j"]
    },
    {
      // 向上移动5行
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      // 快速切换boolean
      "before": ["leader", "i"],
      "commands": ["extension.toggleBool"]
    },
    {
      // 存在递归映射的情况（如 f → s → c l），所以在 normalModeKeyBindingsNonRecursive 添加
      // sneak,f--->s 让s S 恢复为最原始的功能
      "before": ["f"],
      "after": ["s"]
    },
    {
      // sneak, F--->S
      "before": ["F"],
      "after": ["S"]
    },
    {
      // sneak  让s S 恢复为最原始的功能
      "before": ["s"],
      "after": ["c", "l"]
    },
    {
      // sneak  让s S 恢复为最原始的功能
      "before": ["S"],
      "after": ["^", "C"]
    },
    {
      // 基于%删除函数
      "before": ["leader", "d", "f"],
      "after": ["V", "$", "%", "d"]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      // sneak 在 operator-pending 模式 下是 z 与 Z，而不是 s
      "before": ["f"],
      "after": ["z"]
    },
    {
      "before": ["F"],
      "after": ["Z"]
    }
  ],
